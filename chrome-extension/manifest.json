{
  "manifest_version": 3,
  "name": "CareerVine - LinkedIn Integration",
  "version": "2.0.0",
  "description": "Import LinkedIn profiles directly into your CareerVine CRM",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://dawsonsprojects.com/*",
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["src/content/linkedin-scraper.js", "src/content/content.js"],
      "css": ["src/content/panel.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/content/panel-app/*"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "CareerVine"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
